{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "JSON schema for Azure Webjobs collection files",
  "type": "object",
  "properties": {
    "WebJobs": {
      "description": "A list of Azure Webjobs.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "filePath": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": [
    "WebJobs"
  ]
}
